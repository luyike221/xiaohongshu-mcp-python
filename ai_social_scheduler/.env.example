# 应用配置
APP_NAME=xiaohongshu-agent
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# LLM 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=
ANTHROPIC_API_KEY=your_anthropic_api_key_here
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4

# 阿里百炼模型配置
ALIBABA_BAILIAN_API_KEY=your_alibaba_bailian_api_key_here
ALIBABA_BAILIAN_API_SECRET=your_alibaba_bailian_api_secret_here
ALIBABA_BAILIAN_ENDPOINT=https://dashscope.aliyuncs.com/compatible-mode/v1
ALIBABA_BAILIAN_MODEL=qwen-plus
ALIBABA_BAILIAN_TEMPERATURE=0.7
ALIBABA_BAILIAN_MAX_TOKENS=
ALIBABA_BAILIAN_TIMEOUT=60

# DeepSeek OCR 模型配置
DEEPSEEK_OCR_API_KEY=your_deepseek_ocr_api_key_here
DEEPSEEK_OCR_ENDPOINT=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_OCR_MODEL=deepseek-ocr
DEEPSEEK_OCR_TIMEOUT=60
DEEPSEEK_OCR_MAX_RETRIES=3

# 数据库配置
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/xiaohongshu
DATABASE_ECHO=false

# Redis 配置
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Celery 配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# 存储配置
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=xiaohongshu

# 监控配置
SENTRY_DSN=
PROMETHEUS_PORT=9090
